# ==================================
# DATABASE CONFIGURATION
# ==================================
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=apostolado_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=sua_senha_aqui
DATABASE_SSL=false

# ==================================
# STRAPI SECRETS
# ==================================
