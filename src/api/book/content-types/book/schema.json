{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Livros da Biblioteca",
    "description": "Catálogo de livros recomendados"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Obras de Newman",
        "Sobre Newman",
        "Formação Católica",
        "Outros"
      ],
      "default": "Obras de Newman"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "pdfFile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["files"]
    },
    "available": {
      "type": "boolean",
      "default": false
    },
    "externalUrl": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
