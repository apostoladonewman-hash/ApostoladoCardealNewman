{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Testemunhos",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nome_pessoa": {
      "type": "string",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "email": {
      "type": "email"
    },
    "denominacao_anterior": {
      "type": "string"
    },
    "data_conversao": {
      "type": "date"
    },
    "ano_nascimento": {
      "type": "integer",
      "min": 1900,
      "max": 2100
    },
    "cidade_natural": {
      "type": "string"
    },
    "cidade_atual": {
      "type": "string"
    },
    "profissao": {
      "type": "string"
    },
    "biografia": {
      "type": "text"
    },
    "testemunho_completo": {
      "type": "richtext"
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "author"
    },
    "id_testemunhos": {
      "type": "uid",
      "targetField": "nome_pessoa"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected"],
      "default": "pending",
      "required": true
    },
    "usuario_vinculado": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "motivo_rejeicao": {
      "type": "text"
    },
    "data_submissao": {
      "type": "datetime"
    },
    "data_moderacao": {
      "type": "datetime"
    },
    "moderado_por": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
